@model IEnumerable<Product>


@foreach (var item in Model)
{
            <tr>
                <td>
            @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
            @Html.DisplayFor(modelItem => item.Prix)
                </td>
                <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit <i class="bi bi-pencil-fill"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details <i class="bi bi-eye-fill"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete <i class="bi bi-trash3-fill"></i></a>
                </td>
            </tr>
}